<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <include layout="@layout/fragment_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fragment_bar"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/fromTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/jozoor_font"
                    android:gravity="center|top"
                    android:text="من"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@mipmap/from" />

                <TextView
                    android:id="@+id/fromResultTV"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/textreferral"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textAlignment="gravity"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/toTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/jozoor_font"
                    android:gravity="center|top"
                    android:text="إلي"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@mipmap/to" />

                <TextView
                    android:id="@+id/toResultTV"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/textreferral"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textAlignment="gravity"
                    android:layout_marginTop="4dp" />

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/typeTV"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/jozoor_font"
                android:gravity="right"
                android:text="نوع القضية"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/typeDetialsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textreferral"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textColor="@android:color/black" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultTV"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/jozoor_font"
                android:gravity="right"
                android:text="النتيجة"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/resultDetialsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textreferral"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textColor="@android:color/black" />



        </LinearLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">


            <TextView
                android:id="@+id/noteTV"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|fill_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/jozoor_font"
                android:gravity="right"
                android:text="الشرح"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noteTV">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".75"
                    app:srcCompat="@mipmap/note" />

            <TextView
                android:id="@+id/noteResultTV"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textreferral"
                android:minLines="10"
                android:layout_weight="4.25"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right"
                android:textColor="@android:color/black"
                android:textAlignment="gravity" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>



    </LinearLayout>

    <ImageButton
        android:id="@+id/add_referral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:background="@android:color/transparent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>