<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <include layout="@layout/fragment_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/textView5"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="عنوان القضية"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="8dp"
        android:id="@+id/textView6"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/jozoor_font"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:background="@drawable/textreferral"
        android:text=""
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textAlignment="gravity"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        android:weightSum="5">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="نوع المشفوعات"
            android:fontFamily="@font/jozoor_font"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="3.50"/>

        <TextView
            android:text="عدد المشفوعات"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1.5"
            android:fontFamily="@font/jozoor_font"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        android:weightSum="5">

        <TextView
            android:id="@+id/documents_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textreferral"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:layout_marginTop="4dp"
            android:layout_weight="3.50"/>
        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"/>

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:layout_marginTop="4dp"
            android:background="@drawable/textreferral"
            android:id="@+id/documents_no"
            android:layout_weight="1.25"/>

    </LinearLayout>




    <TextView
        android:text="المصدر"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/jozoor_font"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resource"
        android:gravity="right"
        android:textColor="@android:color/black"
        android:textAlignment="gravity"
        android:layout_marginTop="4dp"
        android:background="@drawable/textreferral"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resource"
        android:weightSum="5">


        <TextView
            android:text="تاريخ المصدر"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:fontFamily="@font/jozoor_font"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="3.5" />

        <TextView
            android:text="رقم المصدر"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:fontFamily="@font/jozoor_font"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1.5" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear3"
        android:weightSum="5">

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resource_date"
            android:background="@drawable/textreferral"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:layout_marginTop="4dp"
            android:layout_weight="3.25"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:src="@mipmap/date"
            android:layout_marginTop="4dp"
            android:layout_weight=".25" />

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"/>

        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resource_no"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:layout_marginTop="4dp"
            android:background="@drawable/textreferral"
            android:layout_weight="1.25"/>

    </LinearLayout>


    <TextView
        android:text="تاريخ الوارد"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jozoor_font"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear4"
        android:textColor="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:weightSum="5">


        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/coming_date"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:layout_marginTop="4dp"
            android:background="@drawable/textreferral"
            android:layout_weight="4.5"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:src="@mipmap/date"
            android:layout_marginTop="4dp"
            android:layout_weight=".5" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
